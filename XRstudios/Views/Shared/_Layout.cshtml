<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - XRstudios</title>
    <!-- Add Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700&display=swap" rel="stylesheet">
    <!-- Keep Bootstrap for grid system if needed -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Your custom styles -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/XRstudios.styles.css" asp-append-version="true" />
</head>
<body class="@(ViewContext.RouteData.Values["Action"].ToString().ToLower() == "landing" ? "landing-page" : "")">
    <!-- Replace header with modern navigation -->
    <div class="nav-container">
        <div class="navbar">
            <a href="/" class="logo">XRstudios</a>
            <div class="nav-links">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a asp-area="" asp-controller="Home" asp-action="Portfolio">Portfolio</a>
                <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
            </div>
        </div>
    </div>
    <!-- Main content area -->
    <div class="floating-shapes"></div>
    <main role="main">
        @RenderBody()
    </main>
    <!-- Modernized footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2025 - XRstudios</p>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </div>
    </footer>
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/animations.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Full-Screen Gallery Modal -->
    <div id="fullscreenGallery" class="fullscreen-gallery">
        <div class="fullscreen-content">
            <!-- Close button -->
            <div class="fullscreen-close" onclick="closeFullscreenGallery()">&times;</div>

            <!-- Image counter -->
            <div class="image-counter">
                <span id="currentImageIndex">1</span> / <span id="totalImages">1</span>
            </div>

            <!-- Main image container -->
            <div class="fullscreen-image-container">
                <!-- Loading overlay -->
                <div class="loading-overlay" id="loadingOverlay">
                    <div class="loading-spinner"></div>
                </div>

                <!-- Navigation arrows -->
                <div class="fullscreen-nav fullscreen-prev" onclick="changeFullscreenImage(-1)">‹</div>
                <div class="fullscreen-nav fullscreen-next" onclick="changeFullscreenImage(1)">›</div>

                <!-- Main image -->
                <img id="fullscreenImage" class="fullscreen-image" src="" alt="">
            </div>

            <!-- Thumbnail strip -->
            <div class="thumbnail-strip" id="thumbnailStrip">
                <!-- Thumbnails will be generated dynamically -->
            </div>
        </div>
    </div>

</body>
</html>