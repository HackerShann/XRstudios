@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero">

    <video autoplay muted loop id="hero-video">
        <source src="/Assets/hero-img.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="hero-content">
        <h1>The Future of XR Experiences</h1>
        <p>We create immersive virtual and augmented reality solutions that transform how people interact with digital content.</p>
        <a href="#showcase" class="btn">Explore Our Work</a>
    </div>
    <div class="decorative-grid">
        @for (int i = 0; i < 25; i++)
        {
            <div class="grid-item"></div>
        }
    </div>
</section>

<!-- Services Section -->
<section class="services" id="services">
    <div class="container">
        <div class="section-header">
            <h2>Our Services</h2>
            <div class="underline"></div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="service-card reveal">
                    <div class="service-icon">GD</div>
                    <h3>Graphic Design</h3>
                    <p>Professional visual design services including branding, marketing materials, illustrations, and visual assets that elevate your digital presence.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card reveal">
                    <div class="service-icon">UX</div>
                    <h3>UX/UI Design</h3>
                    <p>User-centered design solutions that enhance usability and engagement through intuitive interfaces, user research, and interactive prototypes.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card reveal">
                    <div class="service-icon">XR</div>
                    <h3>Extended Reality</h3>
                    <p>Cutting-edge VR, AR, and MR experiences that transform how users interact with digital content, designed for maximum impact across all XR platforms.  cgvbn </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card reveal">
                    <div class="service-icon">WD</div>
                    <h3>Web Development</h3>
                    <p>Custom, responsive websites and web applications built with modern technologies that provide seamless experiences across all devices.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card reveal">
                    <div class="service-icon">SD</div>
                    <h3>Software Development</h3>
                    <p>Tailored software solutions that automate processes, improve efficiency, and solve complex business challenges using cutting-edge technologies.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card reveal">
                    <div class="service-icon">MD</div>
                    <h3>Mobile App Development</h3>
                    <p>Native and cross-platform mobile applications for iOS and Android that deliver engaging experiences while meeting your business objectives.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Showcase Section with Fixed Bento Grid -->
<section class="showcase" id="showcase">
    <div class="container">
        <div class="section-header">
            <h2>Featured Projects</h2>
            <div class="underline"></div>
        </div>

        <div class="bento-grid">
            <!-- Featured Project (Large) with Video -->
            <div class="bento-item bento-feature">
                <div class="bento-media">
                    <video autoplay muted loop poster="/img/projects/immersive-training-poster.jpg">
                        <source src="/Assets/tech-vid.mp4" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
                <div class="bento-overlay"></div>
                <div class="bento-content">
                    <div class="bento-icon">VR</div>
                    <h3>Immersive Training Suite</h3>
                    <p>A comprehensive VR training platform for industrial safety procedures with real-time feedback and analytics. Users can practice hazardous scenarios without risk.</p>
                    <div class="bento-tags">
                        <span>Virtual Reality</span>
                        <span>Training</span>
                        <span>Industrial</span>
                    </div>
                    <a href="#" class="bento-link">View Project</a>
                </div>
            </div>

            <!-- Medium Project 1 - AR Architecture -->
            <div class="bento-item bento-medium">
                <div class="bento-media">
                    <video autoplay muted loop poster="/img/projects/ar-architecture-poster.jpg">
                        <source src="/Assets/code-vid.mp4" type="video/mp4">
                    </video>
                </div>
                <div class="bento-overlay"></div>
                <div class="bento-content">
                    <div class="bento-icon">AR</div>
                    <h3>Architectural Visualization</h3>
                    <p>An AR solution that allows clients to visualize architectural designs in their actual environment.</p>
                    <div class="bento-tags">
                        <span>Augmented Reality</span>
                        <span>Architecture</span>
                    </div>
                    <a href="#" class="bento-link">View Project</a>
                </div>
            </div>

            <!-- Small Project 1 - Interactive Museum -->
            <div class="bento-item bento-small">
                <div class="bento-media">
                    <img src="/img/projects/museum-mr.jpg" alt="Interactive Museum Experience">
                </div>
                <div class="bento-overlay"></div>
                <div class="bento-content">
                    <div class="bento-icon">MR</div>
                    <h3>Interactive Museum</h3>
                    <p>A mixed reality experience that brings historical artifacts to life.</p>
                    <div class="bento-tags">
                        <span>Mixed Reality</span>
                        <span>Education</span>
                    </div>
                </div>
            </div>

            <!-- Small Project 2 - Product Configurator -->
            <div class="bento-item bento-small" style="background: radial-gradient(circle at top right, rgba(0, 255, 200, 0.1), rgba(18, 18, 18, 0.9));">
                <div class="bento-overlay"></div>
                <div class="bento-content">
                    <div class="bento-icon">3D</div>
                    <h3>Product Configurator</h3>
                    <p>Interactive 3D product visualization tool for e-commerce.</p>
                    <div class="bento-tags">
                        <span>Web3D</span>
                        <span>E-Commerce</span>
                    </div>
                </div>
            </div>

            <!-- Medium Project 2 - Medical Training -->
            <div class="bento-item bento-medium">
                <div class="bento-media">
                    <img src="/img/projects/medical-xr.jpg" alt="Medical Training Simulator">
                </div>
                <div class="bento-overlay"></div>
                <div class="bento-content">
                    <div class="bento-icon">XR</div>
                    <h3>Medical Training Simulator</h3>
                    <p>An advanced XR platform for medical professionals to practice complex procedures in a realistic environment with haptic feedback.</p>
                    <div class="bento-tags">
                        <span>Healthcare</span>
                        <span>Education</span>
                        <span>Simulation</span>
                    </div>
                    <a href="#" class="bento-link">View Project</a>
                </div>
            </div>

            <!-- Small Project 3 - Therapeutic VR -->
            <div class="bento-item bento-small">
                <div class="bento-media">
                    <video autoplay muted loop poster="/img/projects/therapeutic-vr-poster.jpg">
                        <source src="/videos/therapeutic-vr.mp4" type="video/mp4">
                    </video>
                </div>
                <div class="bento-overlay"></div>
                <div class="bento-content">
                    <div class="bento-icon">VR</div>
                    <h3>Therapeutic VR</h3>
                    <p>Virtual environments for pain management and therapy.</p>
                    <div class="bento-tags">
                        <span>Healthcare</span>
                        <span>Therapy</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Project Modal (Keep this outside the bento grid) -->
<div class="project-modal" id="projectModal">
    <div class="modal-content">
        <div class="modal-close">&times;</div>
        <div class="modal-body">
            <!-- Content will be populated via JavaScript -->
        </div>
    </div>
</div>

